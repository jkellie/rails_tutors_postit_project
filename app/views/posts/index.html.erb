<%= link_to 'Add A Post-It', new_post_path, class: "btn" %>
<br />
<br />
<h2>While you were out...</h2>
<br />
<table class="table">
  <tr>
		<th></th>
		<th>Title</th>
		<th>Url</th>
    <th>Poster</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% counter = 1 %>
<% @posts.each do |post| %>
  <tr>
		<td><%= counter %></td>
    <td><%= post.title %></td>
		<td><%= link_to(post.url, post.url) %></td>
		<td><%= post.user.name %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
	<% counter += 1 %>
<% end %>
</table>
